---
import energia from "../../../public/Tesla/SolarPanels.avif";
---

<section
  class="landing-section h-screen w-screen text-center overflow-hidden relative"
  data-header-color="black"
>
  <div class="z-20 relative h-full flex flex-col">
    <header class="flex flex-col">
      <h2 class="text-black pt-40 text-[40px] font-medium">
        Energia solar y Powerwall
      </h2>
      <p class="text-black text-sm">totalmente electrico</p>
    </header>

    <footer class="flex flex-col flex-grow justify-end pb-32">
      <div class="flex space-x-6 mx-auto">
        <a
          class="border-[3px] border-gray-900 bg-gray-900 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors duration-300 hover:border-gray-800 hover:bg-gray-700 w-72"
          href="#"
        >
          Mas informacion
        </a>
      </div>
    </footer>
  </div>
  <div class="absolute top-0 bottom-0 h-full w-full">
    <img
      src={energia.src}
      class="object-center object-cover h-full w-full"
      alt="modely"
    />
  </div>
</section>
<footer
  class="py-3 px-12 flex justify-center bg-black items-center bottom-0 w-full z-40 text-white text-xs font-medium"
>
  <nav>
    <ul class="flex [&>li>h6]:inline-block [&>li>h6]:px-2 [&>li>h6]:py-2">
      <li><h6>Tesla Â© 2023</h6></li>
      <li><h6>Privacidad y legal</h6></li>
      <li><h6>Contacto</h6></li>
      <li><h6>Ubicacino</h6></li>
    </ul>
  </nav>
</footer>
